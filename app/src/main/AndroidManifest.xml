<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.YellowPagesRwanda.ReportingSystem">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.YellowPagesRwanda.ReportingSystem.AppController"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.YellowPagesRwanda.ReportingSystem.LoginActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.YellowPagesRwanda.ReportingSystem.RegisterActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:windowSoftInputMode="adjustPan" />

        <activity android:name="com.YellowPagesRwanda.ReportingSystem.StationLevelActivity" />

        <activity android:name="com.YellowPagesRwanda.ReportingSystem.HQLevelActivity"></activity>
    </application>

</manifest>